/* day la tab*/
/* Style the tab */
.tab {
overflow: hidden;
}

/* Style the buttons inside the tab */
.tab button {
  background-color:#12100E;
	width: 150px;
  float: left;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 14px 16px;
  transition: 0.3s;
  font-size: 16px;
	font-family: tieude1;
	color: #FFE47C;
	
	
}

/* Change background color of buttons on hover */
.tab button:hover {
  background-color:#27231F;
}

/* Create an active/current tablink class */
.tab button.active {
  background-color: #27231F;
}

/* Style the tab content */
.tabcontent {
  display: none;
   border: none;
  border-top: none;
}

